@model EditPostViewModel

@{
    ViewData["Title"] = "Gönderiyi Düzenle";
}

<div class="reddit-container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="reddit-form-card">
                <div class="mb-4">
                    <h2 class="text-reddit-blue">
                        <i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]
                    </h2>
                    <p class="text-muted">Gönderinizi düzenleyin ve güncelleyin</p>
                </div>

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label">
                            <i class="bi bi-pencil-square me-1"></i>Başlık
                        </label>
                        <input asp-for="Title" class="form-control" placeholder="İlgi çekici bir başlık yazın..." />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                        <small class="text-muted d-block mt-1">Maksimum 200 karakter</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Content" class="form-label">
                            <i class="bi bi-card-text me-1"></i>İçerik
                        </label>
                        <textarea asp-for="Content" class="form-control" rows="12" placeholder="Ne düşünüyorsunuz? Detayları burada paylaşın..."></textarea>
                        <span asp-validation-for="Content" class="text-danger small"></span>
                    </div>

                    <div class="d-flex gap-2 justify-content-end border-top pt-3">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-reddit-secondary">
                            <i class="bi bi-x-circle me-1"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-reddit-primary">
                            <i class="bi bi-check-circle me-1"></i>Güncelle
                        </button>
                    </div>
                </form>
            </div>

            <!-- Edit Notice -->
            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Not:</strong> Gönderiyi düzenlediğinizde, "düzenlendi" etiketi görünür olacaktır.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
