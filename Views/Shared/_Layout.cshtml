<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ForumApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg reddit-navbar">
            <div class="container-fluid px-4">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-chat-square-text-fill me-2" style="font-size: 1.8rem;"></i>
                    <span>ForumApp</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Post" asp-action="MyPosts">
                                    <i class="bi bi-file-text me-1"></i>Postlarım
                                </a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-shield-lock me-1"></i>Admin Panel
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-reddit-orange btn-sm" asp-controller="Post" asp-action="Create">
                                    <i class="bi bi-plus-circle me-1"></i>Yeni Post
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1" style="font-size: 1.5rem;"></i>
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Post" asp-action="MyPosts">
                                            <i class="bi bi-file-text me-2"></i>Postlarım
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-reddit-secondary btn-sm" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-reddit-orange btn-sm" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="reddit-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="mb-2">&copy; 2025 ForumApp - Özgürce Paylaş</p>
                    <p class="mb-0 small">
                        <a href="#" class="text-decoration-none me-3">Kullanım Koşulları</a>
                        <a href="#" class="text-decoration-none me-3">Gizlilik Politikası</a>
                        <a href="#" class="text-decoration-none">İletişim</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Toast Notifications from TempData *@
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                Toast.success('@Html.Raw(TempData["SuccessMessage"])');
            });
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                Toast.error('@Html.Raw(TempData["ErrorMessage"])');
            });
        </script>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                Toast.info('@Html.Raw(TempData["InfoMessage"])');
            });
        </script>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                Toast.warning('@Html.Raw(TempData["WarningMessage"])');
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
