@model RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="reddit-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="reddit-form-card">
                <div class="text-center mb-4">
                    <i class="bi bi-chat-square-text-fill text-reddit-orange" style="font-size: 3rem;"></i>
                    <h2 class="mt-3">@ViewData["Title"]</h2>
                    <p class="text-muted">ForumApp topluluğuna katılın</p>
                </div>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="bi bi-envelope me-1"></i>Email
                        </label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="ornek@email.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">
                                <i class="bi bi-person me-1"></i>Ad
                            </label>
                            <input asp-for="FirstName" class="form-control form-control-lg" placeholder="Adınız" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">
                                <i class="bi bi-person me-1"></i>Soyad
                            </label>
                            <input asp-for="LastName" class="form-control form-control-lg" placeholder="Soyadınız" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="bi bi-lock me-1"></i>Şifre
                        </label>
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Güçlü bir şifre seçin" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                        <small class="text-muted d-block mt-1">En az 6 karakter uzunluğunda olmalıdır</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="bi bi-lock-fill me-1"></i>Şifre Tekrar
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Şifrenizi tekrar girin" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-reddit-primary w-100 btn-lg mb-3">
                        <i class="bi bi-person-plus me-2"></i>Kayıt Ol
                    </button>

                    <div class="text-center">
                        <hr />
                        <p class="text-muted mb-0">
                            Zaten hesabınız var mı?
                            <a asp-action="Login" class="text-reddit-blue fw-bold text-decoration-none">Giriş Yap</a>
                        </p>
                    </div>
                </form>
            </div>

            <!-- Info Card -->
            <div class="reddit-sidebar-card mt-3">
                <div class="reddit-sidebar-header">
                    <i class="bi bi-shield-check me-2"></i>Neden Kayıt Olmalısınız?
                </div>
                <div class="reddit-sidebar-content">
                    <ul class="mb-0 small">
                        <li class="mb-2">Gönderi oluşturun ve paylaşın</li>
                        <li class="mb-2">Diğer kullanıcılarla etkileşim kurun</li>
                        <li class="mb-2">Yorumlar yapın ve tartışmalara katılın</li>
                        <li class="mb-2">Kişiselleştirilmiş deneyim yaşayın</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
