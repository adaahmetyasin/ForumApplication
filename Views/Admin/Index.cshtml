@model IEnumerable<Post>

@{
    ViewData["Title"] = "Admin Panel - Tüm Gönderiler";
}

<div class="reddit-container">
    <div class="row">
        <!-- Main Content Area -->
        <div class="col-lg-12">
            <!-- Header -->
            <div class="reddit-post-card mb-3">
                <div class="reddit-post-content">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <div>
                            <h2 class="mb-1">
                                <i class="bi bi-shield-lock me-2 text-danger"></i>@ViewData["Title"]
                            </h2>
                            <p class="text-muted mb-0">Tüm gönderileri görüntüleyin ve yönetin</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Users" class="btn btn-reddit-secondary btn-sm">
                                <i class="bi bi-people me-1"></i>Kullanıcılar
                            </a>
                            <div class="badge bg-danger" style="font-size: 1rem; padding: 10px 20px;">
                                <i class="bi bi-person-badge me-1"></i>Admin Modu
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="reddit-post-card">
                    <div class="reddit-post-content p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead style="background-color: var(--reddit-hover);">
                                    <tr>
                                        <th class="py-3 px-4">
                                            <i class="bi bi-file-text me-1"></i>Başlık
                                        </th>
                                        <th class="py-3 px-4">
                                            <i class="bi bi-person me-1"></i>Yazar
                                        </th>
                                        <th class="py-3 px-4">
                                            <i class="bi bi-clock me-1"></i>Tarih
                                        </th>
                                        <th class="py-3 px-4 text-center">
                                            <i class="bi bi-gear me-1"></i>İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var post in Model)
                                    {
                                        <tr>
                                            <td class="py-3 px-4">
                                                <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none">
                                                    <strong>@post.Title</strong>
                                                </a>
                                                @if (post.UpdatedDate.HasValue)
                                                {
                                                    <span class="badge bg-warning text-dark ms-2">
                                                        <i class="bi bi-pencil"></i>
                                                    </span>
                                                }
                                            </td>
                                            <td class="py-3 px-4">
                                                <i class="bi bi-person-circle me-1 text-reddit-blue"></i>
                                                <strong>u/@post.User?.UserName</strong>
                                            </td>
                                            <td class="py-3 px-4">
                                                <small class="text-muted">
                                                    @{
                                                        var timeSpan = DateTime.UtcNow - post.CreatedDate;
                                                        var timeAgo = timeSpan.TotalDays >= 1 ?
                                                            $"{(int)timeSpan.TotalDays} gün önce" :
                                                            timeSpan.TotalHours >= 1 ?
                                                                $"{(int)timeSpan.TotalHours} saat önce" :
                                                                $"{(int)timeSpan.TotalMinutes} dakika önce";
                                                    }
                                                    <i class="bi bi-clock"></i> @timeAgo
                                                    <br />
                                                    @post.CreatedDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td class="py-3 px-4 text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm btn-reddit-secondary">
                                                        <i class="bi bi-eye"></i> Görüntüle
                                                    </a>
                                                    <form asp-action="DeletePost" asp-route-id="@post.Id" method="post" class="d-inline" onsubmit="return confirm('Bu gönderiyi silmek istediğinizden emin misiniz?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-danger">
                                                            <i class="bi bi-trash"></i> Sil
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Stats Card -->
                <div class="row mt-3">
                    <div class="col-md-4">
                        <div class="reddit-sidebar-card">
                            <div class="reddit-sidebar-content text-center">
                                <div class="fw-bold text-reddit-blue" style="font-size: 2rem;">
                                    @Model.Count()
                                </div>
                                <small class="text-muted">Toplam Gönderi</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="reddit-sidebar-card">
                            <div class="reddit-sidebar-content text-center">
                                <div class="fw-bold text-reddit-orange" style="font-size: 2rem;">
                                    @Model.Select(p => p.UserId).Distinct().Count()
                                </div>
                                <small class="text-muted">Aktif Kullanıcı</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="reddit-sidebar-card">
                            <div class="reddit-sidebar-content text-center">
                                <div class="fw-bold text-success" style="font-size: 2rem;">
                                    @Model.Count(p => p.CreatedDate >= DateTime.UtcNow.AddDays(-1))
                                </div>
                                <small class="text-muted">Bugünkü Gönderiler</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="reddit-post-card">
                    <div class="reddit-post-content text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 4rem; color: var(--reddit-text-secondary);"></i>
                        <h4 class="mt-3">Henüz hiç gönderi bulunmamaktadır</h4>
                        <p class="text-muted">Kullanıcılar gönderi oluşturmaya başladığında burada görünecek.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
