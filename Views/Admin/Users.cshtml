@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Admin Panel - Kullanıcı Yönetimi";
    var userRoles = ViewBag.UserRoles as Dictionary<string, IList<string>>;
}

<div class="reddit-container">
    <div class="row">
        <!-- Main Content Area -->
        <div class="col-lg-12">
            <!-- Header -->
            <div class="reddit-post-card mb-3">
                <div class="reddit-post-content">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <div>
                            <h2 class="mb-1">
                                <i class="bi bi-people-fill me-2 text-danger"></i>@ViewData["Title"]
                            </h2>
                            <p class="text-muted mb-0">Kullanıcıları görüntüleyin ve yönetin</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Index" class="btn btn-reddit-secondary btn-sm">
                                <i class="bi bi-arrow-left me-1"></i>Gönderiler
                            </a>
                            <div class="badge bg-danger" style="font-size: 1rem; padding: 10px 20px;">
                                <i class="bi bi-person-badge me-1"></i>Admin Modu
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="reddit-post-card">
                    <div class="reddit-post-content p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead style="background-color: var(--reddit-hover);">
                                    <tr>
                                        <th class="py-3 px-4">
                                            <i class="bi bi-person me-1"></i>Kullanıcı
                                        </th>
                                        <th class="py-3 px-4">
                                            <i class="bi bi-envelope me-1"></i>Email
                                        </th>
                                        <th class="py-3 px-4">
                                            <i class="bi bi-shield me-1"></i>Rol
                                        </th>
                                        <th class="py-3 px-4">
                                            <i class="bi bi-clock me-1"></i>Kayıt Tarihi
                                        </th>
                                        <th class="py-3 px-4 text-center">
                                            <i class="bi bi-gear me-1"></i>İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        var roles = userRoles?[user.Id] ?? new List<string>();
                                        var isAdmin = roles.Contains("Admin");

                                        <tr>
                                            <td class="py-3 px-4">
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-person-circle me-2" style="font-size: 1.5rem; color: var(--reddit-blue);"></i>
                                                    <div>
                                                        <strong>@user.UserName</strong>
                                                        @if (!string.IsNullOrEmpty(user.FirstName) || !string.IsNullOrEmpty(user.LastName))
                                                        {
                                                            <br />
                                                            <small class="text-muted">@user.FirstName @user.LastName</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3 px-4">
                                                @user.Email
                                            </td>
                                            <td class="py-3 px-4">
                                                @if (isAdmin)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-shield-fill-check me-1"></i>Admin
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="bi bi-person me-1"></i>Kullanıcı
                                                    </span>
                                                }
                                            </td>
                                            <td class="py-3 px-4">
                                                <small class="text-muted">
                                                    @user.RegisteredDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td class="py-3 px-4 text-center">
                                                <div class="btn-group" role="group">
                                                    @if (isAdmin)
                                                    {
                                                        <form asp-action="RemoveAdmin" asp-route-userId="@user.Id" method="post" class="d-inline"
                                                              onsubmit="return confirm('@user.UserName kullanıcısını admin olmaktan çıkarmak istediğinizden emin misiniz?');">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-warning">
                                                                <i class="bi bi-shield-slash me-1"></i>Admin Çıkar
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <form asp-action="MakeAdmin" asp-route-userId="@user.Id" method="post" class="d-inline"
                                                              onsubmit="return confirm('@user.UserName kullanıcısını admin yapmak istediğinizden emin misiniz?');">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-success">
                                                                <i class="bi bi-shield-fill-plus me-1"></i>Admin Yap
                                                            </button>
                                                        </form>
                                                    }
                                                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post" class="d-inline ms-1"
                                                          onsubmit="return confirm('@user.UserName kullanıcısını silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-danger">
                                                            <i class="bi bi-trash me-1"></i>Sil
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Stats Card -->
                <div class="row mt-3">
                    <div class="col-md-4">
                        <div class="reddit-sidebar-card">
                            <div class="reddit-sidebar-content text-center">
                                <div class="fw-bold text-reddit-blue" style="font-size: 2rem;">
                                    @Model.Count()
                                </div>
                                <small class="text-muted">Toplam Kullanıcı</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="reddit-sidebar-card">
                            <div class="reddit-sidebar-content text-center">
                                <div class="fw-bold text-danger" style="font-size: 2rem;">
                                    @Model.Count(u => userRoles != null && userRoles.ContainsKey(u.Id) && userRoles[u.Id].Contains("Admin"))
                                </div>
                                <small class="text-muted">Admin Kullanıcı</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="reddit-sidebar-card">
                            <div class="reddit-sidebar-content text-center">
                                <div class="fw-bold text-success" style="font-size: 2rem;">
                                    @Model.Count(u => u.RegisteredDate >= DateTime.UtcNow.AddDays(-7))
                                </div>
                                <small class="text-muted">Son 7 Gün</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="reddit-post-card">
                    <div class="reddit-post-content text-center py-5">
                        <i class="bi bi-people" style="font-size: 4rem; color: var(--reddit-text-secondary);"></i>
                        <h4 class="mt-3">Henüz hiç kullanıcı bulunmamaktadır</h4>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
